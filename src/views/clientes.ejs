<% include partials/_header %> 

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
         <table class="table table-bordered table-hover">
            <thead>
                <tr>
                   <th>NÂº</th>
                   <th>Nombre</th>     
                   <th>Direccion</th>
                   <th>Telefono</th>
                   <th>Acciones</th>                    
                </tr>
            </thead>
            <tbody>
               <% if (data) { %>
                <% for (var i = 0; i < data.length; i++){ %>
                    <tr>
                    <td><%= (i + 1)  %></td>
                    <td><%= data[i].nombre %></td>
                    <td><%= data[i].direccion %></td>
                    <td><%= data[i].telefono %></td>
                    <td>
                    <a href="/clientes/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                    <a href="/clientes/update/<%= data[i].id %>" class="btn btn-info">Editar</a>
                    </td>
                    </tr>

                <% } %>
               <% } %> 

            </tbody>
         </table>   
     </div>
      <div class="col-md-5">   
         <div class="card">
            <div class="card-body">
                    <form action="/clientes/add" method="POST" >
                        <div class="form-group">
                        <input type="text" name="nombre" placeholder="Nombre" class="form-control" required>
                           </div> 
                           <div class="form-group">
                             <input type="text" name="direccion" placeholder="Direccion" class="form-control" required>
                               </div> 
                               <div class="form-group">
                                <input type="text" name="telefono" placeholder="Telefono" class="form-control" required>
                                   </div> 
                                   <button type="submit" class="btn btn-primary">
                                       Guardar Cliente
                                   </button>
                           </form>
                           <%= mensaje %>



            </div>

         </div>
        </div>
    </div>

</div>

<% include partials/_footer %> 